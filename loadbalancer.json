{
	"builders": [
		{
			"type": "amazon-ebs",
			"source_ami": "{{user `base_ami`}}",
			"instance_type": "{{user `instance_size`}}",
			"ssh_username": "{{user `ssh_username`}}",
			"ssh_timeout": "20m",
			"ami_name": "{{user `ami_name`}}",
			"ssh_pty": "true",
			"tags": {
				"Name": "App Name",
				"BuiltBy": "Packer"
			}
    }
  ],
	"description": "AWS Image",
	"provisioners": [
		{
			"type": "shell",
			"script": "packer-script.sh"
    }
  ]
}
